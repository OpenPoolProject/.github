{
  "extends": [
    "config:base",
    ":maintainLockFilesWeekly",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "docker:enableMajor",
    "docker:pinDigests",
    "group:linters",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "auto-update"
  ],
  "dependencyDashboardAutoclose": true,
  "automerge": true,
  "automergeType": "pr-comment",
  "automergeComment": "bors: r+",
  "prCreation": "immediate",
  "rebaseWhen": "conflicted",
  "pre-commit": {
    "enabled": true
  },
  "terraform": {
    "ignorePaths": [
      "**/context.tf",
      "examples/**"
    ]
  }
}
